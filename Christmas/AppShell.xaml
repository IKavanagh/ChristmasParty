<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Christmas.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:view="clr-namespace:Christmas.View"
       xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource Primary}" StatusBarStyle="Default" />
    </Shell.Behaviors>

    <TabBar>
        <ShellContent Title="Events"
                      Icon="list.png"
                      ContentTemplate="{DataTemplate view:EventsPage}" />

        <ShellContent Title="FAQs"
                      Icon="question.png"
                      ContentTemplate="{DataTemplate view:QuestionsPage}" />

        <ShellContent Title="About"
                      Icon="info.png"
                      ContentTemplate="{DataTemplate view:AboutPage}" />
    </TabBar>
</Shell>
